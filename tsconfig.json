{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "module": "CommonJS",
    "outDir": "dist",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true
  },
  "include": [ "src" ]
}
